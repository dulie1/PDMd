<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nik"
    android:weightSum="10"
    tools:context="com.example.dulip.fuel.MainActivity">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textgrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="FUEL CONSUMPTION"
            android:textColor="@color/ni"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TableRow>

            <TextView
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/ni"
            android:textSize="16dp"
            android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/tvdate"

                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Select Date"
                    android:textColor="@color/ni"
                    android:textSize="18dp"
                    android:layout_gravity="left"/>


            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Odometer"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="Km"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ltr"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>
            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rs"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cost"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Rs"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>
            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CO2(per Km)"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit5"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="g"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>
            </TableRow>
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <TableRow>
                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="CO2(Emited)"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>

                <EditText
                    android:id="@+id/edit6"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@color/ni"
                    android:textSize="18dp" />

                <TextView
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="g"
                    android:textColor="@color/ni"
                    android:textSize="16dp"
                    android:layout_gravity="left"/>
            </TableRow>
        </TableLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <android.support.v7.widget.CardView
        android:id="@+id/f2"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_rowWeight="1"
        android:backgroundTint="@color/nia"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <TableRow>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/stat1"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="STATISTICS"
                        android:textColor="@color/ni"
                        android:textSize="40dp"
                        android:layout_gravity="left"/>

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>
